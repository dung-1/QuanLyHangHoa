@{
    ViewData["Title"] = "Thống Kê";
}

<div class="container">
    <p class="fs-4 fw-bold d-flex justify-content-center text-primary">Thống Kê Số Lượng Bán Ra</p>

    <form method="post" class="mt-4">
        <div class="form-row">
            <div class="form-group col-md-4">
                <label for="tuNgay">Từ ngày:</label>
                <input type="date" class="form-control" id="tuNgay" name="tuNgay">
            </div>
            <div class="form-group col-md-4">
                <label for="denNgay">Đến ngày:</label>
                <input type="date" class="form-control" id="denNgay" name="denNgay">
            </div>
            <div class="form-group col-md-4">
                <label class="invisible">Thống Kê:</label>
                <button type="submit" class="btn btn-primary btn-block">Thống Kê</button>
            </div>
        </div>
    </form>

    @if (Model != null)
    {
        <h2 class="mt-4">Kết Quả Thống Kê</h2>

        <table class="table mt-2">
            <thead>
                <tr>
                    <th>Mã hàng</th>
                    <th>Tên hàng</th>
                    <th>Số lượng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MaHang</td>
                        <td>@item.TenHang</td>
                        <td>@item.SoLuong</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
