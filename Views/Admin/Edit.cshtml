@model HangHoaModel

<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Cập Nhật Hàng Hóa</h2>
    </div>

    <form method="post" asp-action="Edit">
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Ma">Ma</label>
                <input type="text" class="form-control mb-3" asp-for="Ma">
                <span asp-validation-for="Ma" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Ten">Ten</label>
                <input type="text" class="form-control mb-3" asp-for="Ten">
                <span asp-validation-for="Ten" class=" alert-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="GIa">Gía</label>
                <input type="text" class="form-control mb-3" asp-for="GIa">
                <span asp-validation-for="GIa" class=" alert-danger"></span>
            </div>

        </div>


        <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i><i class="fa-solid fa-pen-to-square"></i> Cập Nhật</button>
        <a asp-controller="Admin" asp-action="Index" class="btn btn-lg btn-warning p-2"><i class="fa-solid fa-carrot"></i> Danh sách Hàng Hóa</a>
    </form>

</div>


@*//for front end validations*@

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}