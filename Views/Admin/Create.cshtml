@model HangHoaModel


<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Thêm Hàng Hóa</h2>
    </div>

    <form method="post">
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Ma"> Ma</label>
                <input type="text" class="form-control mb-3" asp-for="Ma" placeholder="Enter Mã">
                <span asp-validation-for="Ma" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Ten">Ten</label>
                <input type="text" class="form-control mb-3" asp-for="Ten" placeholder="Enter Ten">
                <span asp-validation-for="Ten" class=" alert-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="GIa">Gia</label>
                <input type="text" class="form-control mb-3" asp-for="GIa" placeholder="Enter Gia">
                <span asp-validation-for="GIa" class=" alert-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Lưu</button>
        <a asp-controller="Admin" asp-action="Index" class="btn btn-lg btn-warning p-2">Danh sách Hàng Hóa</a>
    </form>

</div>


@*//for front end validations*@

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}